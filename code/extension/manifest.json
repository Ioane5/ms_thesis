{
  "manifest_version": 2,
  "name": "ChatApp",
  "description": "This is Chat App extension, that will be using P2P implementation",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Start Chat!"
  },
  "background": {
    // Because you are using p2pcontroller, you should load it before your backgorund.js
    // TODO move socket.io.js into p2pcontroller.js so that it's hidden and easier to use and import
    "scripts": [
      "socket.io.js",
      "p2pcontroller.js",
      "p2pcontroller_wrapper.js",
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}